    <option name="inputMapTree" value="LightMaps" type="string" desc="light-map tree"/>

    <!-- Output ROOT file -->
    <option name="outputOpticalSimFile" short="o" value="opticalsim.root" type="string" 
        desc="output file"/>    

    <!-- Name of tree in the output file that contains the
         detector-response information. This tree will be a
         row-for-row match with the input ntuple, and can therefore be
