         of optical photons arriving at each optical detector. -->
    <option name="inputOpDetSimTree" value="OpticalPhotons" type="string" desc="input optical photons tree"/>

    <!-- Output ROOT file -->
    <option name="outputOpDetSimFile" short="o" value="opdetsim.root" type="string"
        desc="output file"/>
    <option name="outputOpDetSimTree" value="OpDetSim" type="string" desc="output tree"/>
 
    <!-- 
         IMPORTANT: Note that the units associated with these
         constants should be consistent with the "TimeUnit",
         "LengthUnit", and "EnergyUnit" options defined above.
    -->

    <!-- The general processing for opdetsim comes from
