	 Note that the _values_ of the parameters don't have to be the
	 same as those of gramselecsim; opdetsim uses the same
	 functional forms, but the electronics readout for the optical
	 detectors doesn't have to be the same as for the TPC
	 readout.-->
    
    <!-- general information -->
    <option name="op_timebin_width"        value="10.0"     type="double" desc="time bin width in this framework"/>
    <option name="op_time_window"          value="200000.0" type="double" desc="sampling width"/>

    <!-- Preamp -->
    <!-- Valid values of preamp_func are:
    0 = Gaussian normalized to unit probability
    1 = Gaussian
    2 = Log of normalized gaussian
    3 = Log of gaussian
    4 = Double exponential
    -->
    <option name="op_preamp_func"          value="5"       type="int"    desc="curve type of preamp output"/>
    <option name="op_preamp_prior_time"    value="0.0"     type="double" desc="rise time"/>
    <option name="op_preamp_post_time"     value="35000.0" type="double" desc="decay time"/>
    <option name="op_peak_delay"           value="0.0"     type="double" desc="delay time from e-"/>
    <option name="op_preamp_mu"            value="1500.0"  type="double" desc="sampling width"/>
    <option name="op_preamp_sigma"         value="400.0"   type="double" desc="sampling width"/>
    <option name="op_preamp_tau1"          value="100.0"   type="double" desc="tau1 in two exp model"/>
    <option name="op_preamp_tau2"          value="500.0"   type="double" desc="tau2 in two exp model"/>
    <option name="op_preamp_gain"          value="31250"   type="double" desc="photonelecton->voltage [mV/fC]"/>
    <option name="op_preamp_amp"           value="1236.25" type="double" desc="semi-Gauss model amplitude"/>
    <option name="op_preamp_tp"            value="9163.78" type="double" desc="semi-Gauss model peaking time [ns]"/>
    <option name="op_preamp_A0"            value="8.62801" type="double" desc="semi-Gauss model shaping term A0"/>
    <option name="op_preamp_A1"            value="1.96116" type="double" desc="semi-Gauss model shaping term A1"/>
    <option name="op_preamp_W1"            value="1.02976" type="double" desc="semi-Gauss model shaping term W1"/>

    <!-- add noise -->
    <option name="op_noise_param0"     value="0.0"     type="double" desc="0th order"/>
    <option name="op_noise_param1"     value="0.0"     type="double" desc="1st order"/>
    <option name="op_noise_param2"     value="0.0"     type="double" desc="2nd order"/>

    <!-- AD converter -->
    <option name="op_bit_resolution"   value="12"      type="int"      desc="resolution of ADC [bit]"/>
    <option name="op_input_min"        value="0.0"     type="double"   desc="minimum input of ADC [mV]"/>
    <option name="op_input_max"        value="1500.0"  type="double"   desc="maximum input of ADC [mV]"/>
    <option name="op_sample_freq"      value="2.0"     type="double"   desc="sampling frequency of ADC [MHz]"/>

    <!-- OpDet parameters - these are unique to opdetsim -->

    <!-- Be mindful of this option. See OPDETSIM.md for details. -->
